<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CommandConsoleActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8caa96"
        android:text="Run command"
        android:id="@+id/btnExec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Command :"
        android:id="@+id/tvCommand" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text= 'rule:{"addTimestamp":"+","matchAddress":"0541112233","matchContent":"-","priority":2,"replaceContent":"-","replyTo":"0541112233"}'
        android:id="@+id/etCommand"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

</LinearLayout>
